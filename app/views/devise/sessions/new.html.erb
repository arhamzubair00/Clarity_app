<section class="login-page">
  <div class="container">
    <div class="row login-content d-flex">
      <div class="col-6">
      <h2 class="mb-3">Welcome to Clarity</h2>

        <div class="form-inputs">

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        placeholder: "Email",
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        placeholder: "Password",
                        input_html: { autocomplete: "current-password" } %>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "login-btn" %>
          </div>
        <% end %>
        <%= link_to " Or Sign up ...", new_registration_path(resource_name), class: "signup-btn" %>
        <%# <%= render "devise/shared/links" %>
        </div>
      </div>

      <div class="col-6">
        <%= image_tag "https://media.istockphoto.com/vectors/romantic-girl-with-flying-hair-is-watering-the-potted-flowers-vector-id1095494470?k=20&m=1095494470&s=612x612&w=0&h=aAAvXCvrQy32EBgF-prIHLgLAVhky-r9gfEvS2ZXpG8=",
        alt:"Wellness"%>
      </div>

    </div>
  </div>
</section>
